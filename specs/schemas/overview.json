{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A representation of some SVN-repo",
    "type": "object",
    "properties": {
        "status": {
            "type": "string",
            "pattern": "success|warning"
        },
        "reason": { "type": "string" },
        "data": {
            "type": "object",
            "properties": {
                "last_sych_date": { "type": "number" },
                "repo_type": { 
                    "type": "string",
                    "pattern": "svn"
                },
                "url": { "type": "string" },
                "size": { "type": "number" }                
            }            
        }
    },
    "required": [ "status", "reason" ]
}
