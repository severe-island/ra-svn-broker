{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A representation of some SVN-repository",
    "type": "object",
    "properties": {
        "status": {
            "type": "string",
            "pattern": "success|warning|failure"
        },
        "reason": { "type": "string" },
        "data": {
            "type": "object",
            "properties": {
                "last_sych_date": { "type": "number" },
                "type": { 
                    "type": "string",
                    "pattern": "svn"
                },
                "url": { "type": "string" },
                "size": { "type": "number" },
                "branches": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": { "type": "string" },
                            "status": { 
                                "type": "string",
                                "pattern": "unlocked|locked"
                            },
                            "created_at": { "type": "number" },
                            "initial_commit": { "type": "string" },
                            "author": { "type": "string" }
                        }
                    }
                }
            }            
        }        
    }
}
