{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A representation of a commit from some SVN-repo",
    "type": "object",
    "properties": {
        "status": {
            "type": "string",
            "pattern": "success|warning|failure"
        },
        "reason": { "type": "string" },
        "data": {
            "type": "object",
            "properties": {
                "commited_at": { "type": "number" },
                "message": { "type": "string" },
                "commiter": { "type": "string" },
                "positiveDelta": { "type": "number" },
                "negativeDelta": { "type": "number" },
                "branch": { "type": "string" },
                "files": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "size": { "type": "number" },
                            "flag": { 
                                "type": "string",
                                "pattern": "A|D|M|R"
                            },
                            "positiveDelta": { "type": "number" },
                            "negativeDelta": { "type": "number" },
                            "path": { "type": "string" }
                        }
                    }
                }
            }                        
        }
    },
    "required": [ "status", "reason" ]
}
