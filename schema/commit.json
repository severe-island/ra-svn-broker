{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "description": "A representation of a commit from some SVN-repo",
    "type": "object",
    "properties": {
        "commited_at": { "type": "string", "format": "date" },
        "message": { "type": "string" },
        "commiter": { "type": "string" },
        "difference": { "type": "numeric" },
        "files": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "size": { "type": "numeric" },
                    "flags": { "type": "string" },
                    "difference": { "type": "numeric" },
                    "path": { "type": "string" },
                    "branch": { "type": "string" }
                }
            }
        }
    }
}